# Copia este archivo a .env y completa los valores

DATABASE_URL="mysql://user:password@localhost:3306/db"
NODE_ENV="development"
PORT="3000"

# Configuración SMTP - REEMPLAZA LA CONTRASEÑA
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587 
SMTP_USERNAME=ejemplo@gmail.com
SMTP_PASSWORD=password_de_aplicacion
SMTP_SECURE=false

# Seguridad (se generan automáticamente)
JWT_SECRET="$(openssl rand -hex 32)"
SESSION_SECRET="$(openssl rand -hex 32)"

# Aplicación
APP_URL="ip_del_servidor:4000"
FRONTEND_URL="ip_del_servidor:4000"
